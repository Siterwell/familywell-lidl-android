<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <me.hekr.sthome.commonBaseView.progress.ColorArcProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:is_need_dial="true"
        android:id="@+id/loading" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_selected"
        android:textSize="60sp"
        android:layout_gravity="center"
        android:text="12"
        android:id="@+id/prodcess"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/restart"
        android:textColor="@color/text_color_selected"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textSize="@dimen/LargestTextSize"
        android:text="@string/device_setup_record_second" />
</FrameLayout>