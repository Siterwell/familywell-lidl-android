<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/ipc_title_bg"

        >
        <TextView
            android:id="@+id/backBtnInTopLayout"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="@string/back"
            android:textSize="@dimen/SmallTextSize"
            android:textColor="@color/ipc_base_color"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <ImageButton
        android:id="@+id/backBtnInTopLayout2"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        android:layout_gravity="left"
        android:layout_width="@dimen/setting_width_little"
        android:layout_height="@dimen/setting_height_little"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/textViewInTopLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:singleLine="true"
            />

        <ImageButton
            android:id="@+id/SettingBtnInTopLayout"
            android:layout_marginRight="@dimen/setting_marginRight"
            android:background="@drawable/setting_ipc"
            android:layout_gravity="right"
            android:layout_width="@dimen/setting_width_little"
            android:layout_height="@dimen/setting_height_little"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/SettingBtnInTopLayoutText"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:paddingRight="@dimen/SmallPadding"
        android:paddingLeft="@dimen/SmallPadding"
        android:gravity="center"
        android:text="@string/save"
        android:textSize="@dimen/SmallTextSize"
        android:textColor="@color/ipc_base_color"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    </RelativeLayout>

