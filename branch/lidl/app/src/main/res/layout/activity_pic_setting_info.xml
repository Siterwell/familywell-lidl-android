<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgDeviceQRCode"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layoutTop"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imgDeviceQRCode"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_system_info_sn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>
            <TextView
                style="@style/CCPFontPreferenceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/sn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:textColor="@color/monitor_sel"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_system_info_model"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>

            <TextView
                style="@style/CCPFontPreferenceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/type"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:textColor="@color/monitor_sel"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item"
            android:id="@+id/storage">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_system_info_nat_code"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>

            <TextView
                style="@style/CCPFontPreferenceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/net_type"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:textColor="@color/monitor_sel"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item"
            android:id="@+id/expertsetting">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_system_info_nat_status"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>

            <TextView
                style="@style/CCPFontPreferenceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/net_status"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:textColor="@color/monitor_sel"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_to_default_set"
        android:background="@color/btn_delete"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/reset" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:background="@color/btn_delete"
        android:textColor="@color/white"
        android:layout_above="@id/reset"
        android:layout_marginBottom="8dp"
        android:id="@+id/delete" />
</RelativeLayout>