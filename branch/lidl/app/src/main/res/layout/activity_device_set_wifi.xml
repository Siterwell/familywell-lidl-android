<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:id="@+id/snadd">


		<RelativeLayout
			android:id="@+id/layoutDeviceSN2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/layoutTop"
			android:background="@color/white"
			>

			<EditText
				android:id="@+id/editSN"
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:layout_margin="10dp"
				android:background="#00000000"
				android:gravity="center_vertical"
				android:hint="@string/camera_empety_sn"
				android:singleLine="true"
				android:textColor="#ff101010"
				android:textColorHint="#ffe0e0e0"
				android:textSize="16dp"
				android:maxLength="16"
				android:inputType="textVisiblePassword"
				android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
				/>

			<View
				android:id="@+id/divLine2"
				android:layout_below="@id/editSN"
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="@color/device_offine"
				/>
		</RelativeLayout>

		<Button
			android:id="@+id/btnWifiQuickAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/layoutDeviceSN2"
			android:layout_marginTop="10dp"
			android:background="@drawable/common_button_selector_white"
			android:gravity="center"
			android:padding="10dp"
			android:text="@string/add_camera"
			android:textColor="@drawable/common_text_selector"
			android:textSize="18dp" />


	</RelativeLayout>
	<Button
		android:id="@+id/btnScanCode"
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:layout_below="@id/btnWifiQuickAdd"
		android:layout_marginTop="60dp"
		android:background="@mipmap/erweima"
		android:gravity="center"
		android:padding="10dp"
		android:textColor="@drawable/common_text_selector"
		android:textSize="18dp" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		style="@style/CCPFontPreferenceSmall"
		android:text="@string/click_to_scan_qcode"/>
</LinearLayout>
