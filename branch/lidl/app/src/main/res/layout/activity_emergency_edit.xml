<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/NormalPadding"
        android:paddingBottom="@dimen/NormalPadding"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/et_emergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/arrow"
            android:background="@null"
            android:hint="@string/please_input_emergency_call"
            android:textColorHint="@color/text_color_hint"
            android:layout_marginRight="@dimen/SmallPadding"
            android:layout_marginLeft="@dimen/SmallPadding"
            android:ems="10" android:inputType="number"/>

        <requestFocus />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc1"
            android:layout_marginRight="@dimen/SmallPadding"
            android:layout_marginLeft="@dimen/SmallPadding"
            android:textSize="12sp"
            android:text="@string/emergency_desc_first"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc2"
            android:layout_marginRight="@dimen/SmallPadding"
            android:layout_marginLeft="@dimen/SmallPadding"
            android:textSize="12sp"
            android:text="@string/emergency_desc_second"/>
    </LinearLayout>

</LinearLayout>