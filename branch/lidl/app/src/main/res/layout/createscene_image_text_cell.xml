<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cellImageView"
        android:layout_width="@dimen/add_n_group_item_image_width"
        android:layout_height="@dimen/add_n_group_item_image_width" />
    <TextView
        android:id="@+id/cellTextView"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/add_n_group_item_text_size"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>
</LinearLayout>
