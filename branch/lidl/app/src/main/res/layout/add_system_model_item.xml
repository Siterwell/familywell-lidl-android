<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="@dimen/modle_item_height">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/modle_item_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/modle_main_padding"
        android:background="@drawable/list_item_normal">
        <LinearLayout
            android:layout_width="@dimen/modle_item_ico_width"
            android:layout_height="@dimen/modle_item_ico_height"
            android:gravity="left">
            <TextView
                android:id="@+id/cellScenceImage"
                android:layout_width="@dimen/modle_item_cellScenceImage_width"
                android:layout_height="@dimen/modle_item_cellScenceImage_height"
                android:layout_gravity="center"
                android:textSize="@dimen/modle_font"
                android:text="01"
                android:gravity="left|center_vertical" />
        </LinearLayout>

        <TextView
            android:text="one"
            android:gravity="left|center_vertical"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/cellScenceName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/modle_item_height"
            android:textColor="@color/black"
            android:singleLine="true"
            android:marqueeRepeatLimit="-1"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:textSize="@dimen/modle_font"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/modle_item_height"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_weight="1"
                android:id="@+id/checkboxo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/sysdetail_item_padding"
                android:paddingBottom="@dimen/sysdetail_item_padding"
                android:background="@drawable/sys_model_item_selector"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>