<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_bk">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/guanwang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/gateway_color_1"/>

                <me.hekr.sthome.commonBaseView.SettingItem
                    android:id="@+id/app_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_accessoryType="none"
                    app:item_showDivider="true"
                    app:item_titleText="@string/app_version_hint" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comm_settting_item_selector"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/SmallListHeight"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/NormalPadding"
                    android:paddingRight="@dimen/NormalPadding"
                    android:id="@+id/downing">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:minHeight="@dimen/SmallListHeight"
                            android:paddingLeft="@dimen/SmallPadding"
                            android:orientation="vertical">

                            <TextView
                                android:id="@android:id/title"
                                style="@style/CCPFontPreferenceLarge"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:text="@string/downing"
                                android:singleLine="true" />
                        </LinearLayout>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/jindu"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="100"
                            android:progress="0" />
                    </LinearLayout>

                    <View
                        android:id="@+id/item_bottom_divider"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/list_divider" />

                </LinearLayout>


                <me.hekr.sthome.commonBaseView.SettingItem
                    android:id="@+id/gateway_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_accessoryType = "none"
                    app:item_showDivider="true"
                    app:item_titleText="@string/click_check_firemare" />

                <me.hekr.sthome.commonBaseView.SettingItem
                    android:id="@+id/sale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_accessoryType = "arrow"
                    app:item_showDivider="true"
                    app:item_detailText=""
                    app:item_titleText="@string/sale_number" />
                <me.hekr.sthome.commonBaseView.SettingItem
                    android:id="@+id/yinsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:item_accessoryType = "arrow"
                    app:item_showDivider="true"
                    app:item_detailText=""
                    app:item_titleText="@string/view_yinsi" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:lineSpacingExtra="@dimen/SmallPadding"
                android:padding="@dimen/NormalPadding"
                android:id="@+id/intro"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


