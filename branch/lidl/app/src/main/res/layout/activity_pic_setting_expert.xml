<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layoutTop"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item"
            android:id="@+id/recordsetting">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_setup_record"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>

            <ImageView
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/back_image_height"
                android:src="@drawable/arrow2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item"
            android:id="@+id/alarmsetting">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_opt_alarm_config"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>

            <ImageView
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/back_image_height"
                android:src="@drawable/arrow2"

                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView3" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item"
            android:id="@+id/imagesetting">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_setup_image"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>

            <ImageView
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/back_image_height"
                android:src="@drawable/arrow2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:paddingLeft="@dimen/SmallPadding"
            android:paddingRight="@dimen/SmallPadding"
            android:background="@color/btn_item"
            android:id="@+id/othersetting">
            <TextView
                style="@style/CCPFontPreferenceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/device_setup_other"
                android:layout_marginLeft="@dimen/NormalPadding"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/delist_bk"/>

            <ImageView
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/back_image_height"
                android:src="@drawable/arrow2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider"/>
    </LinearLayout>

</RelativeLayout>