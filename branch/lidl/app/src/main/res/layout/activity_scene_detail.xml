<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_bk">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:paddingTop="@dimen/modle_scenceList_title_padding"
            android:paddingBottom="@dimen/modle_scenceList_title_padding"
            android:layout_marginLeft="@dimen/modle_main_padding"
            android:paddingRight="@dimen/modle_main_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_normal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="left|top"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/choose_color"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textSize="@dimen/content_size"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/NormalPadding"
            android:paddingBottom="@dimen/NormalPadding">
            <me.hekr.sthome.wheelwidget.view.WheelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/color" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/colorshow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:background="@color/red"/>
        </RelativeLayout>
    </LinearLayout>

<LinearLayout
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/modle_main_padding"
    android:layout_marginBottom="@dimen/modle_main_padding"
    >

    <LinearLayout
        android:paddingTop="@dimen/modle_scenceList_title_padding"
        android:paddingBottom="@dimen/modle_scenceList_title_padding"
        android:layout_marginLeft="@dimen/modle_main_padding"
        android:paddingRight="@dimen/modle_main_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_normal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="left|top"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/scene_list"
                android:textAllCaps="false"
                android:gravity="center"
                android:textSize="@dimen/content_size"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/sDetailListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </ListView>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
