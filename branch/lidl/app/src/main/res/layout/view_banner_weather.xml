<?xml version="1.0" encoding="utf-8"?>
<me.hekr.sthome.commonBaseView.Weatherlinearlayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_weather_height"
    android:id="@+id/topp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/gps_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:src="@mipmap/gps"
            android:id="@+id/gps_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/location_ing"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/gps"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/weater_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/setting_marginRight">

            <ImageView
                android:layout_width="@dimen/home_weather_ico_width"
                android:layout_height="@dimen/home_weather_ico_height"
                android:src="@mipmap/weather"
                android:id="@+id/weather"/>

            <LinearLayout
                android:id="@+id/desp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="@dimen/content_size"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:text="- -"
                    android:id="@+id/weater_txt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="- -"
                    android:id="@+id/HShow" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/home_houseImg_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/TShow"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="- -"
                android:textSize="55sp" />
        </LinearLayout>

    </LinearLayout>
</me.hekr.sthome.commonBaseView.Weatherlinearlayout>