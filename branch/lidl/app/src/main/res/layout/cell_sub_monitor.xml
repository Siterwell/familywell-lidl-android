<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingRight="@dimen/SmallestPadding"
    android:paddingLeft="@dimen/SmallestPadding">
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@mipmap/ship"
       android:layout_centerHorizontal="true"
       android:id="@+id/sub_monitor"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sub_monitor_name"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="我的家2"
        android:layout_below="@id/sub_monitor"
         style="@style/CCPPreferenceTextSmall"
        android:textSize="12sp"
        android:textColor="@color/monitor_unsel" />
</RelativeLayout>